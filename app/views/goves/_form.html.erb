<%= form_for @gofe, :html => {:class => "form-horizontal"} do |form| %>
  <%= render :partial => '/layouts/partials/formerror', :locals => {model: @gofe} %>
  
  <!-- TODO: AJAX multi level drop box -->
  <%= render :partial => '/layouts/partials/els', :locals => {level: :level_id, event: :event_id, segment: :segment_id, f: form} %>

  <div class="form-group row">
    <%= render :partial => '/layouts/partials/date', :locals => {achieved: :achieved, f: form} %>
    <%= render :partial => '/layouts/partials/select', :locals => {w: 3, lbl: "Competition", fld: :competition_id, fld2: :name, list: Competition.all, newpath: new_competition_path, f: form} %>
  </div>  

  <div class="form-group row">
    <%= render :partial => '/layouts/partials/select', :locals => {w: 3, lbl: "Skater", fld: :skater1, fld2: :name, list: Skater.all, newpath: new_skater_path, f: form} %>
    <%= render :partial => '/layouts/partials/select', :locals => {w: 3, lbl: "Skater", fld: :skater2, fld2: :name, list: Skater.all, newpath: new_skater_path, f: form} %>
  </div>
 
  <div class="form-group row">
    <%= render :partial => '/layouts/partials/textfield', :locals => {lbl: "Element", fld: :element, f: form} %>
    <%= render :partial => '/layouts/partials/goe', :locals => {grade: :grade, f: form} %>
  </div> 

  <%= render :partial => '/layouts/partials/formbtn', :locals => {cxlpath: goves_path, f: form} %>

<% end %>
