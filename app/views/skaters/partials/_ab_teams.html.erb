<div class="card">
  <div class="card-block">
    <h5 class="card-header card-danger text-centre">Provincial Teams</h5>
    <div class="card-text">
      <table class="table table-sm">
        <% ab_teams.where(skater_id: skater.id).in_groups_of(3) do |abg| %>
          <tr>
            <% abg.each do |ab| %>
              <% if ab.present? %>
                <td><%= ab.year %> <%= ab.team.name %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>