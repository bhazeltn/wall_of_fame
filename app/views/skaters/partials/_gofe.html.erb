<div class="col-md-6">
  <div class="card">
    <div class="card-block">
      <h5 class="card-header card-danger text-centre">+2 Grade Of Execution</h5>
      <div class="card-text">
        <% years.each do |y| %>
          <% if gofes.where(skater1: skater.id, year: y).or(gofes.where(skater1: skater.id, year: y)).present? %>
            <% competitions.each do |c| %>
              <% if gofes.where(skater1: skater.id, competition_id: c.id, year: y).or(gofes.where(skater2: skater.id, competition_id: c.id, year: y)).present? %>
                <h6><%= y %> <%= c.name %></h6>
                <table class = 'table table-sm'>
                  <tbody>
                    <% gofes.where(skater1: skater.id, competition_id: c.id).or(gofes.where(skater2: skater.id, competition_id: c.id)).in_groups_of(2) do |gg| %>
                      <tr>
                        <% gg.each do |g| %>
                          <% if g.present? %>
                            <td><%= g.segment.name %> <%= g.element %> +<%= g.grade %></td>
                          <% end %>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>