<div class="card">
  <div class="card-block">
    <h5 class="card-header card-danger text-centre">Gold and Diamond Tests</h5>
    <div class="card-text">
      <table class="table table-sm">
        <tbody>
          <% gold_tests.where(skater_id: skater.id).in_groups_of(3) do |gtg|  %>
            <tr>
              <% gtg.each do |gt| %>
                <% if gt.present? %>
                  <td>
                    <%= gt.year %> - <%= gt.testLevel %>
                  </td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>