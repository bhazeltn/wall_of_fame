<%= form_for @skater, :html => {:class => "form-horizontal"} do |form| %>
  <%= render :partial => '/layouts/partials/formerror', :locals => {model: @skater} %>
  
  <div class="form-group row">
    <%= render :partial => '/layouts/partials/textfield', :locals => {lbl: "First Name", fld: :first_name, fld2: :skater_first_name, f: form } %>
    <%= render :partial => '/layouts/partials/textfield', :locals => {lbl: "Last Name", fld: :last_name, fld2: :skater_last_name, f: form } %>
  </div>
  
  <%= render :partial => '/layouts/partials/formbtn', :locals => {cxlpath: skaters_path, f: form} %>
  
<% end %>
