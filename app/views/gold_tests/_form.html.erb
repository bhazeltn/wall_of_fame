<%= form_with(model: gold_test, local: true) do |form| %>
  <% if gold_test.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gold_test.errors.count, "error") %> prohibited this gold_test from being saved:</h2>

      <ul>
      <% gold_test.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Skater Name" %>
    <%= form.collection_select :skater_id, Skater.all, :id, :name %>
    Not Listed? <%= link_to 'Add a new Skater', new_skater_path %>
  </div>
  
  <div class="field">
    <%= form.label "Test" %>
    <%= form.select(:testLevel, options_for_select([['Gold Freeskate'], ['Gold Skills'], ['Gold Intrepretive'], ['Gold Dance'], ['Diamond Dance']])) %>
  </div>
  
  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, id: :gold_test_year %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
