<%= form_with(model: ab_team, local: true) do |form| %>
  <% if ab_team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ab_team.errors.count, "error") %> prohibited this ab_team from being saved:</h2>

      <ul>
      <% ab_team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Skater Name" %>
    <%= form.collection_select :skater_id, Skater.all, :id, :name %>
    Not Listed? <%= link_to 'Add a new Skater', new_skater_path %>
  </div>

  <div class="field">
    <%= form.label :team %>
    <%= form.text_field :team, id: :ab_team_team %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.select :year, (2000)..(Time.zone.now.year + 1), id: :ab_team_year %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
