<p id="notice"><%= notice %></p>

<h1>Scores</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Segment</th>
      <th>Score type</th>
      <th>Score</th>
      <th>Skater1</th>
      <th>Skater2</th>
      <th>Skater3</th>
      <th>Skater4</th>
      <th>Team name</th>
      <th>Competition</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.event %></td>
        <td><%= score.segment %></td>
        <td><%= score.score_type %></td>
        <td><%= score.score %></td>
        <td><%= score.skater1 %></td>
        <td><%= score.skater2 %></td>
        <td><%= score.skater3 %></td>
        <td><%= score.skater4 %></td>
        <td><%= score.team_name %></td>
        <td><%= score.competition %></td>
        <td><%= score.year %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

