    <h2>Top Scores</h2>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div>
  <div>
    <ul class="nav nav-pills">
      <% @groups.each do |g| %>
        <li class="nav-item">
          <a href='#<%= g.html_name %>'  aria-controls='<%= g.html_name %>' role="tab" data-toggle="tab" <% if g.id == 1 %> class="nav-link active" <% else %> class="nav-link" <% end %>>
            <% if g.id == 1 %>
              Pre-Novice to Senior
            <% elsif g.id == 2 %>
              Pre-Juvenile and Juvenile
            <% else %>
              <%= g.group_name %>
            <% end %>
          </a>
        </li>
      <% end %>
    </ul>
    <div class="tab-content">
      <% @groups.each do |g| %>
        <div role="tabpanel" id='<%= g.html_name %>'  <% if g.id == 1 %> class="tab-pane active" <% else %> class="tab-pane" <% end %>>
          <span>
            <ul class="nav nav-pills">
              <% @levels.where(group_id: g.id).each do |l| %>
                <li class="nav-item">
                  <a href='#<%= g.html_name %><%= l.html_name %>'  aria-controls='<%= g.html_name %><%= l.html_name %>' role="tab" data-toggle="tab" <% if l.id == 1 %> class="nav-link active" <% else %> class="nav-link" <% end %>>
                    <%= l.level %>
                  </a>
                </li>
              <% end %>
            </ul>
            <div class="tab-content">
              <% @levels.where(group_id: g.id).each do |l| %>
                <div role="tabpanel" id='<%= g.html_name %><%= l.html_name %>' <% if l.id == 1 %> class="tab-pane active" <% else %> class="tab-pane" <% end %>>
                  <span>
                    <ul class="nav nav-pills">
                      <% @events.where(level_id: l.id).each do |e| %>
                        <a href='#<%= l.html_name %><%= e.html_name %>'  aria-controls='<%= l.html_name %><%= e.html_name %>' role="tab" data-toggle="tab" <% if e.id == 1 %> class="nav-link active" <% else %> class="nav-link" <% end %>>
                          <%= e.event_name %>
                        </a>
                      <% end %>
                    </ul>
                    <div class="tab-content">
                      <% @events.where(level_id: l.id).each do |e| %>
                        <div role="tabpanel" id='<%= l.html_name %><%= e.html_name %>' <% if e.id == 1 %> class="tab-pane active" <% else %> class="tab-pane" <% end %>>
                          <span>
                            <%= render :partial => 'scoretable', :locals => {evnt: e, scores: @scores} %>
                          </span>
                        </div>
                      <% end %>
                    </div>
                  </span>
                </div>
              <% end %>
            </div>
          </span>
        </div>
      <% end %>
  </div>
</div>