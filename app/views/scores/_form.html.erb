<%= form_for @score, :html => {:class => "form-horizontal"} do |form| %>
  <%= render :partial => '/layouts/partials/formerror', :locals => {model: @score} %>

  <div class="form-group row">
     <%= render :partial => '/layouts/partials/score', :locals => {score: :score, f: form} %>
    <% if @score.team? %>
      <%= render :partial => '/layouts/partials/team', :locals => {team_name: :team_name, f: form} %>
    <% end %>
  </div>

  <div class="form-group row">
    <%= render :partial => '/layouts/partials/select', :locals => {w: 4, lbl: "Skater", fld: :skater1, model: Skater, newpath: new_skater_path, f: form} %>
    <% if @score.couple? %>
      <%= render :partial => '/layouts/partials/select', :locals => {w: 4, lbl: "Skater", fld: :skater2, model: Skater, newpath: new_skater_path, f: form} %>
    <% end %>
  </div>

  <% if @score.team? %>
    <div class="form-group row">
      <%= render :partial => '/layouts/partials/select', :locals => {w: 4, lbl: "Skater", fld: :skater3, model: Skater, newpath: new_skater_path, f: form} %>
      <%= render :partial => '/layouts/partials/select', :locals => {w: 4, lbl: "Skater", fld: :skater4, model: Skater, newpath: new_skater_path, f: form} %>
    </div>
  <% end %>
  
  <div class="form-group row">
    <%= render :partial => '/layouts/partials/select', :locals => {w: 4, lbl: "Competition", fld: :competition_id, model: Competition, newpath: new_competition_path, f: form} %>
    <%= render :partial => '/layouts/partials/date', :locals => {achieved: :achieved, f: form} %>
  </div>

  <%= render :partial => '/layouts/partials/formbtn', :locals => {cxlpath: scores_path, f: form} %>
<% end %>