<%= form_with(model: score, local: true) do |form| %>
  <% if score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(score.errors.count, "error") %> prohibited this score from being saved:</h2>

      <ul>
      <% score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.text_field :score, id: :score_score %>
  </div>

  <div class="field">
    <%= form.label "Skater Name" %>
    <%= form.text_field :skater1, id: :score_skater1 %>
  </div>
  <% if score.event.event_name == "Pairs" or score.event.event_name == "Dance" or score.event.event_name == "Team" %>
    <div class="field">
      <%= form.label "Skater Name" %>
      <%= form.text_field :skater2, id: :score_skater2 %>
    </div>
  <% end %>
  <% if score.event.event_name == "Team" %>
    <div class="field">
      <%= form.label "Skater Name" %>
      <%= form.text_field :skater3, id: :score_skater3 %>
    </div>
  
    <div class="field">
      <%= form.label "Skater Name" %>
      <%= form.text_field :skater4, id: :score_skater4 %>
    </div>
  
    <div class="field">
      <%= form.label :team_name %>
      <%= form.text_field :team_name, id: :score_team_name %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Competition" %>
    <%= form.collection_select :competition_id, Competition.all, :id, :name %>
  </div>

  
  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, id: :score_year %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
