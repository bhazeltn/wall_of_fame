<h2>STAR Assesments With Honors</h2>
</div>
</div>

<p id="notice"><%= notice %></p>

<div class="container">
<% if admin_signed_in? %>
  <%= link_to 'New Record', new_star_with_honor_path %>
  <hr />
<% end %>
  <ul class="nav nav-pills">
    <% @years.each_with_index do |y, i| %>
      <%= render :partial => '/layouts/tab', :locals => { y: y.to_s, b: y.to_s, i: i } %> 
    <% end %>
  </ul>
  <div class="tab-content">
    <% @years.each_with_index do |y, i| %>
      <div role="tabpanel" id='y<%= y.to_s %><%= y.to_s %>' <% if i == 0 %> class="tab-pane active" <% else %> class="tab-pane" <% end %>>
        <span>
          <ul class="nav nav-pills">
            <% StarLevel.all.each_with_index do |sl, i| %>
              <%= render :partial => '/layouts/tab', :locals => { y: y.to_s, b: sl.level, i: i} %>
            <% end %>
          </ul>
          <div class="tab-content">
            <% StarLevel.all.each_with_index do |sl, i| %>
              <div role="tabpanel" id='y<%= y.to_s %><%= sl.level.gsub(/\s+/, "") %>' <% if i == 0 %> class="tab-pane active" <% else %> class="tab-pane" <% end %>>
                <span>
                  <ul class="nav nav-pills">
                    <% StarTest.where(star_level: sl).each_with_index do |st, i| %>
                      <%= render :partial => '/layouts/tab', :locals => { y: y.to_s + st.star_level.level, b: st.name, i: i} %>
                    <% end %>
                  </ul>
                  <div class="tab-content">
                    <% StarTest.where(star_level: sl).each_with_index do |st, i| %>
                      <div role="tabpanel" id='y<%= y.to_s %><%= sl.level.gsub(/\s+/, "") %><%= st.name.gsub(/\s+/, "") %>' <% if i == 0 %> class="tab-pane active" <% else %> class="tab-pane" <% end %>>
                        <span>
                          <table class="table">
                              <% @star_with_honors.where(star_test: st).in_groups_of(4). each do |grp| %>
                                <tr>
                                  <% grp.each do |sh| %>
                                    <% if sh.present? %>
                                      <td col style="width:25%"><%= sh.skater.name %></td>
                                    <% end %>
                                  <% end %>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                        </span>
                      </div>
                    <% end %>
                  </div>
                </span>
              </div>
            <% end %>
          </div>
        </span>
      </div>
    <% end %>
  </div>




