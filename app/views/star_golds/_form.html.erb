<%= form_with(model: star_gold, local: true) do |form| %>
  <%= render '/layouts/partials/formerror', model: @star_gold %>

  <div class="form-group row">
    <%= render '/layouts/partials/select', w: 3, lbl: "Level", fld: :star_level_id, fld2: :level, list: StarLevel.where.not(id: 5), newpath: new_skater_path, f: form %>
    <%= render '/layouts/partials/select', w: 3, lbl: "Skater", fld: :skater_id, fld2: :name, list: @skaters, newpath: new_skater_path, f: form %>
    <%= render '/layouts/partials/date', achieved: :achieved, f: form %>
  </div>
  
  <div class="form-group row">
     <%= render '/layouts/partials/select', w: 4, lbl: "Competition", fld: :competition_id, fld2: :name, list: @competitions, newpath: new_competition_path, f: form %>
     <%= render '/layouts/partials/textfield', lbl: "Element", fld: :element, fld2: :star_gold_element, f: form %>
  </div>

  <%= render '/layouts/partials/formbtn', cxlpath: star_golds_path, f: form %>

<% end %>
