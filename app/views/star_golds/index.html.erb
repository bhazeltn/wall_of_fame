<h2>STAR Gold Assessments</h2>
</div>
</div>
<p id="notice"><%= notice %></p>
<div>
  <%= link_to 'Add Record', new_star_gold_path %>
</div>
<div>
  <ul class="nav nav-pills">
    <% @years.each_with_index do |y, i| %>
      <li class="nav-item">
        <a href='#y<%= y %>'  aria-controls='y<%= y %>' role="tab" data-toggle="tab" <% if i == 0 %> class="active nav-link" <% else %> class="nav-link" <% end %>>
          <%= y %>
        </a>
      </li>
    <% end %>
  </ul>
  <div class="tab-content">
    <% @years.each_with_index do |y, i| %>
      <div role="tabpanel" id='y<%= y %>' <% if i == 0 %> class="tab-pane active" <% else %> class="tab-pane" <% end %>>
        <% @comps.each do |c| %>
          <% if @star_golds.where(year: y, competition_id: c).present? %>
            <h5><%= Competition.find(c).name %></h5>
              <table class="table table-layout:fixed">
                <thead>
                  <th col style="width:25%">Skater</th>
                  <th col style="width:15%">Element</th>
                  <th col style="width:20%"></th>
                  <th col style="width:25%">Skater</th>
                  <th col style="width:15%">Element</th>
                  <th></th>
                </thead>
                <tbody>
                  <% @star_golds.where(year: y, competition_id: c).in_groups_of(2).each do |group| %>
                  <tr>
                    <% group.each do |sg| %>
                      <% if sg.present? %>
                        <td><%= sg.skater.name %></td>
                        <td><%= sg.element %></td>
                        <td>
                         <%= link_to edit_star_gold_path(sg) do %>
                          <i class="fa fa-pencil" aria-hidden="true"></i>
                        <% end %>
                        </td>
                      <% end %>
                    <% end %>
                  </tr>  
                  <% end %>
                </tbody>
              </table>          
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
